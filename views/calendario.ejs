<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Calendario</title>
  <link href="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.8/main.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.8/main.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@6.1.8/main.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/interaction@6.1.8/main.min.js"></script>
  <link rel="stylesheet" href="css/calendario.css">
</head>
<body>
  <!-- Barra Superior -->
  <div class="barra-superior">
    <div class="menu-icono" onclick="mostrarMenu()"></div>
    <div class="titulo">To-Do List</div>
  </div>

  <!-- Barra Lateral -->
  <div class="barra-lateral" id="barraLateral">
    <div class="cerrar" onclick="cerrarMenu()">×</div>
    <ul>
        <a href="/tareas">
            <i class="fas fa-home" style="font-size: 30px;"></i>
            <p>Inicio</p>
        </a>
        <a href="/crear">
            <i class="fa-solid fa-plus" style="font-size: 30px;"></i>
            <p>Crear</p>
        </a>
        <a href="/perfil">
            <i class="fa-regular fa-user" style="font-size: 30px;"></i>
            <p>Perfil</p>
        </a>
    </ul>
</div>


  
  <div class="contenido">
    <h2 class="titulo-calendario">Calendario</h2>
    <div id="calendario"></div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
    const calendarEl = document.getElementById('calendario');
    
    // Usar la variable eventos pasada desde Express
    const eventos = <%= JSON.stringify(eventos) %>;  // Esto pasa los datos como una variable JS

    console.log("Eventos recibidos en el frontend:", eventos);

    const calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      locale: 'es',
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,timeGridWeek,timeGridDay',
      },
      buttonText: {
        today: 'Hoy',
        month: 'Mes',
        week: 'Semana',
        day: 'Día',
      },
      events: eventos,  // Usamos los eventos directamente aquí
    });

    calendar.render();
  });
</script>
  
</body>
</html>